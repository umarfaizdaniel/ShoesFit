<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoesfit.store">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name="com.shoesfit.store.ThisApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- List Of Activity Class -->
        <activity android:name="com.shoesfit.store.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shoesfit.store.ActivityMain"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name="com.shoesfit.store.ActivityInstruction" />
        <activity android:name="com.shoesfit.store.ActivityNewsInfo" />
        <activity android:name="com.shoesfit.store.ActivityNewsInfoDetails" />
        <activity android:name="com.shoesfit.store.ActivityCategoryDetails" />
        <activity android:name="com.shoesfit.store.ActivityProductDetails" />
        <activity android:name="com.shoesfit.store.ActivityFullScreenImage" />
        <activity android:name="com.shoesfit.store.ActivitySearch" />
        <activity android:name="com.shoesfit.store.ActivityNotification" />
        <activity android:name="com.shoesfit.store.ActivityWishlist" />
        <activity android:name="com.shoesfit.store.ActivityShoppingCart" />
        <activity android:name="com.shoesfit.store.ActivityCheckout" />
        <activity android:name="com.shoesfit.store.ActivityOrderHistory" />
        <activity
            android:name="com.shoesfit.store.ActivityDialogNotification"
            android:theme="@style/AppTheme.Dialog.NoActionBar" />
        <activity
            android:name="com.shoesfit.store.ActivitySettings"
            android:theme="@style/AppThemeSetting" />

        <!-- Ads activity -->
  <!--      <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" /> -->

        <!-- fireBase service -->
        <service android:name="com.shoesfit.store.fcm.FcmMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- fireBase iid service -->
        <service android:name="com.shoesfit.store.fcm.FcmInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>